<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vip.apnaadda">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_app_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity2"></activity>
        <activity android:name=".ui.SearchUserProfile" />
        <activity android:name=".ui.AddFriendActivity" />
        <activity android:name=".ui.UserProfileActivity" />
        <activity
            android:name=".ui.NewProfileActivity"
            android:windowSoftInputMode="stateVisible|adjustResize" />
        <activity
            android:name=".auth.CreateAccountActivity"
            android:windowSoftInputMode="stateVisible|adjustResize" />
        <activity android:name=".auth.LoginActivity" />
        <activity android:name=".ui.ChatActivity" />
        <activity
            android:name=".auth.EnterCodeActivity"
            android:windowSoftInputMode="stateVisible|adjustResize" />
        <activity
            android:name=".auth.PhoneAuthActivity"
            android:windowSoftInputMode="stateVisible|adjustResize" />
        <activity android:name=".StartActivity" />
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>