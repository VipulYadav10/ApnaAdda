<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_image_list_item_friend"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/default_user_icon3"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/user_name_list_item_friend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last message" />

       <ImageView
           android:layout_width="match_parent"
           android:layout_height="13dp"
           android:src="@drawable/row_item_divider"
           android:paddingTop="12dp"
           android:contentDescription="@string/divider_text" />


    </LinearLayout>





</LinearLayout>